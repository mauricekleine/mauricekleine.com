{
  "name": "mozza",
  "version": "0.1.0",
  "private": true,
  "description": "",
  "homepage": "https://www.mauricekleine.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/mauricekleine/mozza"
  },
  "license": "",
  "sideEffects": false,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "format": "prettier --plugin=prettier-plugin-organize-attributes --write \"**/*.{html,js,jsx,md,ts,tsx}\"",
    "preinstall": "npx only-allow pnpm",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "precommit": "lint-staged",
    "prepare": "husky install",
    "start": "turbo start",
    "typecheck": "turbo typecheck",
    "update:major": "taze -r major -w",
    "update:minor": "taze -r minor -w"
  },
  "devDependencies": {
    "eslint": "~8.56.0",
    "eslint-config-mozza": "workspace:*",
    "husky": "~8.0.3",
    "lint-staged": "~15.2.0",
    "prettier": "~3.2.1",
    "prettier-plugin-organize-attributes": "~1.0.0",
    "sort-package-json": "~2.6.0",
    "stylelint": "~16.1.0",
    "stylelint-config-mozza": "workspace:*",
    "taze": "~0.13.1",
    "tsconfig": "workspace:*",
    "turbo": "~1.11.3",
    "typescript": "~5.3.3"
  },
  "packageManager": "pnpm@8.14.1",
  "engines": {
    "node": "^20.0.0"
  }
}
