{
  "name": "clsx-variants",
  "version": "0.1.3",
  "description": "A tiny utility for constructing `className` variants conditionally.",
  "homepage": "https://github.com/mauricekleine/mozza",
  "repository": {
    "type": "git",
    "url": "https://github.com/mauricekleine/mozza/tree/main/packages/clsx-variants"
  },
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup src/index.ts --format cjs --dts",
    "clean": "rimraf dist",
    "dev": "pnpm run build -- --watch",
    "format": "prettier --write .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "npm run clean && npm run build",
    "prepublishOnly": "pnpm test && pnpm run lint",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc -b"
  },
  "dependencies": {
    "clsx": "~2.0.0"
  },
  "devDependencies": {
    "eslint": "~8.52.0",
    "eslint-config-mozza": "workspace:*",
    "prettier": "~3.0.3",
    "rimraf": "~5.0.5",
    "tsconfig": "workspace:*",
    "tsup": "~7.2.0",
    "typescript": "~5.2.2",
    "vitest": "~0.34.6"
  },
  "engines": {
    "node": "^18.0.0"
  }
}
