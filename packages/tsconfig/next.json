{
  "compilerOptions": {
    "baseUrl": "./",
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "paths": {
      "@mk/*": ["./src/features/*"],
      "@mk/lib": ["./src/lib"],
      "@mk/ui": ["./src/features/ui"],
      "@mk/ui/icon": ["./src/features/ui/icon"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "exclude": ["node_modules"],
  "extends": "./base.json",
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"]
}
